#include "string.hpp"
#include <cassert>
#include <iostream>

///////////////////////////////////////////////////////////////
 int main ()
{
  {
    /////////////////////////////////////////////////////////
    // SETUP FIXTURE

    // TEST
     String str2("acdc");

    // VERIFY
    assert(str2 == "acdc");
  }

{
  /////////////////////////////////////////////////////////
  // SETUP FIXTURE

  // TEST
  String str2("");

  // VERIFY
  assert(str2 == "");
}
{
  /////////////////////////////////////////////////////////
  // SETUP FIXTURE

  // TEST
  String str2("abc123");

  // VERIFY
  assert(str2 == "abc123");
}
{
  /////////////////////////////////////////////////////////
  // SETUP FIXTURE

  // TEST
  String str2("lankslacks");

  // VERIFY
  assert(str2 == "lankslacks");
}
 std::cout<<"Done testing ctor."<< std::endl;
}
